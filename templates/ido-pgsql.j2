// {{ ansible_managed }}
{{ icinga2_features_head_comment[icinga2_feature_name] }}

library "db_ido_pgsql"

object {{ icinga2_features_object_name[icinga2_feature_name] }} "{{ icinga2_feature_name }}" {
host = "{{ icinga2_ido_host }}"
port = "{{ icinga2_ido_port }}"
user = "{{ icinga2_ido_user }}"
password = "{{ icinga2_ido_password }}"
database = "{{ icinga2_ido_dbname }}"

{% if icinga2_ido_options is mapping %}
{% for k, v in icinga2_ido_options.items() %}
{% if v is string %}  {{ k }} = {{ v }}
{# ITERATE OVER SECOND LEVEL DICT #}
{% elif v is mapping %}
  {{ k }} = {{ '{' }}
{% for j,l in v.items() %}
{% if l is string %}    {{ j }} = {{ l }}
{% elif l is mapping %}
    {{ j }} = {{ '{' }}
{% for o,p in l.items() %}
      {{ o }} = {{ p }}
{% endfor %}{{ '    }' }}
{% elif l is sequence %}    {{ j }} = {{ '[ ' }}{% for n in l %}{{ n }}{{ ',' if not loop.last else '' }} {% endfor %} {{ '] ' }}
{% endif %}
{% endfor %}{{ '  }' }}
{# END ITERATE OVER SECOND LEVEL DICT #}
{% elif v is sequence %}  {{ k }} = {{ '[ ' }}{% for n in v %}{{ n }}{{ ',' if not loop.last else '' }} {% endfor %} {{ '] ' }}
{% endif %}
{% endfor %}
{% endif %}
}
