// {{ ansible_managed }}
{{ icinga2_features_head_comment[icinga2_feature_name] }}

{% if icinga2_features_library[icinga2_feature_name] is defined %}
library "{{ icinga2_features_library[icinga2_feature_name] }}"
{% endif %}

object {{ icinga2_features_object_name[icinga2_feature_name] }} "{{ icinga2_feature_name }}" {

{% for k, v in icinga2_features_options[icinga2_feature_name].items() %}
{% if v is string %}  {{ k }} = {{ v }}
{% elif v is mapping %}
  {{ k }} = {{ '{' }}
{# ITERATE OVER SECOND LEVEL DICT #}
{% for j,l in v.items() %}
{% if l is string %}    {{ j }} = {{ l }}
{% elif l is mapping %}
    {{ j }} = {{ '{' }}
{% for o,p in l.items() %}
      {{ o }} = {{ p }}
{% endfor %}{{ '    }' }}
{% elif l is sequence %}    {{ j }} = {{ '[ ' }}{% for n in l %}{{ n }}{{ ',' if not loop.last else '' }} {% endfor %} {{ '] ' }}
{% endif %}
{% endfor %}{{ '  }' }}
{% elif v is sequence %}  {{ k }} = {{ '[ ' }}{% for n in v %}{{ n }}{{ ',' if not loop.last else '' }} {% endfor %} {{ '] ' }}
{% endif %}
{% endfor %}

}
